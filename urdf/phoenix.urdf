<robot name="Phoenix">
	<link name="origin" />
	<link name="base_y" />
	<link name="base_p" />
	<link name="base_r" />
	<link name="stump" />
	<link name="gripper" />

	<joint name="yaw" type="continuous">
		<parent link="origin" />
		<child link="base_y" />
		<origin xyz="0 0 0" rpy="0 0 0" />
		<axis xyz="0 0 1" />
	</joint>

	<joint name="pitch" type="continuous">
		<parent link="base_y" />
		<child link="base_p" />
		<origin xyz="0 0 0" rpy="0 0 0" />
		<axis xyz="0 1 0" />
	</joint>

	<joint name="roll" type="continuous">
		<parent link="base_p" />
		<child link="base_r" />
		<origin xyz="0 0 0" rpy="0 0 0" />	
		<axis xyz="1 0 0" />	
	</joint>

	<joint name="stiff_shoulder" type="fixed">
		<parent link="base_r" />
		<child link="stump" />
		<origin xyz="0 0 0" rpy="0 0 -1.57" />		
		<axis xyz="0 0 0" />
	</joint>

	<joint name="wrist_rotate" type="continuous">
		<parent link="stump" />
		<child link="gripper" />
		<origin xyz="0.4 0 0" rpy="0 0 0" />		
		<axis xyz="1 0 0" />		
	</joint>

</robot>

